aside
  width: 100%
  height: rem(75)
  position: relative;
  background-color #F4EEFC
  z-index: 100
  #navigation
    position: absolute;
    overflow: hidden;
    height: rem(75);
    width: 100%
    .icon-arrow
      display: block;
      width: rem(60);
      height: rem(75);
      background-size: 100%
      background-position: center center;;
      absolute right 0.3rem
      transition: background-image 0.5s
      &.up
        background-image: url(./images/arrow-up.png);
      &.down
        background-image: url(./images/arrow-down.png);
    ul
      background-color #F4EEFC
      li
        width: rem(690)
        height: rem(75)
        margin: 0 auto;
        a
          height: rem(75)
          display: inline-block;
          text-align: center;
          line-height: rem(75)
          width: rem(630/4)
          position: relative
          color: #333
          font-size: 15px
          &.active
            color: #F63676
            &:before
              absolute top 0.2rem left -0.18rem
              content: " "
              background: url(./images/location.png) no-repeat;
              background-size: 100%
              width: rem(30);
              height: rem(60);
