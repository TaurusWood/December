body, html, div, ul, a
  font-family Helvetica, arial, sans-serif;
  font-size: 14px
  margin 0
  padding 0
  box-sizing border-box

body
  background-color: #660ac1;
  overflow-x: hidden

ul
  li
    list-style none

p
  box-sizing border-box
  margin: 0.1rem 0

img
  width 100%
  height 100%

a
  display: block;
  text-decoration none
  color initial
  -webkit-tap-highlight-color: rgba(0,0,0,0);
  &:focus
    outline none
