.unslider-nav {
  position: absolute;
  width: 100%;
  bottom: 2px;
  z-index: 12;
}

.unslider-nav ol {
  list-style: none;
  text-align: center;
}
.unslider-nav ol li {
  display: inline-block;
  width: 4px;
  height: 4px;
  margin: 0 4px;
  background-color: rgba(0,0,0,0.2)
  border-radius: 2px;
  overflow: hidden;
  text-indent: -999em;
  cursor: pointer;
}
.unslider-nav ol li.unslider-active {
  background: #fff;
  cursor: default;
}
